{
  "name": "modular-timetable-scheduler",
  "version": "1.0.0",
  "description": "A web and desktop application for creating school timetables.",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "author": "AI Assistant",
  "license": "UNLICENSED",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.3.1",
    "typescript": "^4.9.5",
    "vite": "^4.2.0"
  },
  "build": {
    "appId": "com.scheduler.timetables",
    "productName": "Modular Timetable Scheduler",
    "files": [
      "**/*",
      "!dist",
      "!release"
    ],
    "directories": {
      "output": "release/"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}